@startuml
hide  circle 
class AbstructCandies {
  -taste
  -name
  -weight
  -price
  +gettaste() 
  +getname()
  +getweight()
  +getprice()
}
Class Child {
}

AbstructCandies "1..*" o-right- "1" Child

Class Chokolate {
-cocoaPercentage
-toppings
}


Class Topping {
  +getname()
}
Class CHokoTopping {
  -name
  +getname()
}
Topping <|-- CHokoTopping
Chokolate "1" -right-o "1..*" Topping

AbstructCandies <|-- Chokolate

Class Caramel {
-stuffing
}

AbstructCandies <|-- Caramel

enum AbstructCandiesTaste {
  APPLE
  VANILLA
  ORANGE
  NUT
  COFFEE
}
AbstructCandies "1" -right-o "1" AbstructCandiesTaste
Class Zephir {
}
AbstructCandies <|-- Zephir
Class KitKat{
-raisins
}
Chokolate <|-- KitKat
Class Snikers{
-extraNuts
}
Chokolate <|-- Snikers
@enduml
